{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": 0,
    "semi": ["error", "never"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
   ]
  },
  "settings": {
  "import/resolver": {
    "node": {
      "extensions": [".ts",".d.ts"],
      "moduleDirectory": ["src", "node_modules"]
    }
  }
}
}
